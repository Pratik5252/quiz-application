{
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "module": "nodenext",
        "target": "esnext",
        "moduleResolution": "nodenext",
        "types": [],
        "sourceMap": true,
        "noUncheckedIndexedAccess": true,
        "strict": true,
        "jsx": "react-jsx",
        "isolatedModules": true,
        "noUncheckedSideEffectImports": true,
        "moduleDetection": "force",
        "skipLibCheck": true,
        "typeRoots": ["./node_modules/@types", "./src/types"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "test"]
}
